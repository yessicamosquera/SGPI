@model SGPI.Models.Usuario
@{
    ViewData["Title"] = "BuscarUsuario";
    Layout = "_LayoutSGPI";
}

<h1>Buscar Usuario</h1>

<form class="form-inline justify-content-center">
    <center>
        <ul class="nav nav-pills" class="form">
            <li class="nav-item">
                <a class="nav-link   " href="/Administrador/CrearUsuario">Crear Usuario</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active " aria-current="page" href="#">Buscar Usuario </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Administrador/EliminarUsuario">Eliminar Usuario</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Administrador/EditarUsuario">Editar Usuario</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Administrador/Reportes">Reportes</a>
            </li>
        </ul>
    </center>
</form>
<br />
<form method="post">
    <label>Buscar Usuario</label>
    <br />
    <center>
        <div class="input-group">
            <br />
            <input asp-for="Documento" type="text" class="form-control col-sm-3" id="nombreusuariotxt" required />

            <button type="submit" class="btn btn-primary mb-3">buscar</button>
        </div>
        <br />
    </center>
        @if (Model != null)
        {
        <table class="table" border="1">
            <thead>
            <th>@Html.DisplayNameFor(model=>model.Nombre)</th>
            <th>@Html.DisplayNameFor(model=>model.Apellido)</th>
            <th>@Html.DisplayNameFor(model=>model.Documento)</th>
            <th>@Html.DisplayNameFor(model=>model.Email)</th>
            <th>@Html.DisplayNameFor(model=>model.Password)</th>

            </thead>
            <tbody>

                <tr>
                    <td>@Html.DisplayFor(modelitem=>modelitem.Nombre)</td>
                    <td>@Html.DisplayFor(modelitem=>modelitem.Apellido)</td>
                    <td>@Html.DisplayFor(model=>model.Documento)</td>
                    <td>@Html.DisplayFor(model=>model.Email)</td>
                    <td>@Html.DisplayFor(model=>model.Password)</td>
                    <td>@Html.ActionLink("EditarUsuario","EditarUsuario",new{IdUsuario=Model.IdUsuario})</td>
                    <td>@Html.ActionLink("EliminarUsuario","EliminarUsuario",new{IdUsuario = Model.IdUsuario},new{onclick="return confirm('¿Estas seguro de eliminar?');"})</td>
                </tr>
            </tbody>

        </table>

        <a href="/Administrador/Login"><button type="button" class="btn btn-link">Cerrar sesion</button> </a>

        }

</form>