@model SGPI.Models.Usuario
@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutSGPI";
}

@if (ViewBag.mensaje != null)
{
    <h1>@ViewBag.mensaje</h1>
}
<h1 align="center">Login</h1>
<br/>
<h6 align="center">Sistema de Gestion de Posgrados</h6>
<br/>
<form method="post">
<center>
<div class="form-group">
    <label for="usuariotxt">Usuario</label>
     <input asp-for="Documento" type="text" class="form-control col-sm-4" id="usuariotxt" requiered />
 </div>

 <div class="form-group">
    <label for="password.txt">Contraseña</label>
    <input asp-for="Password" type="password" class="form-control col-sm-4" id="passwordtxt" requiered />
 </div>
   <a href="/Administrador/OlvidarContrasena" id="recuperarPass">¿Olvidaste la contraseña?</a>

     <button type="submit" class="btn btn-outline-danger" id="ingresarbtn type" submit>Ingresar</button>
</center>
</form>
   